{
  "$id": "/schemas/messages",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "CADS messages",
  "type": "object",
  "properties": {
    "messages": {
      "title": "Messages",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "summary": {
            "type": ["string", "null"]
          },
          "url": {
            "type": ["string", "null"]
          },
          "severity": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "live": {
            "type": "boolean"
          },
          "show_date": {
            "type": "boolean"
          }
        },
        "required": ["id", "date", "severity", "content", "live", "show_date"]
      }
    }
  }
}
