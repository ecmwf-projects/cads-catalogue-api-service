{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/schemas/datasets",
  "title": "CADS catalogue API",
  "description": "Description of the CADS catalogue API for obtaining the list of datasets",
  "type": "object",
  "properties": {
    "collections": {
      "title": "STAC collections",
      "description": "Datasets in the stac catalogue",
      "type": "array",
      "items": {
        "type": "object",
        "allOf": [
          {
            "$ref": "/schemas/dataset"
          }
        ]
      }
    }
  }
}
