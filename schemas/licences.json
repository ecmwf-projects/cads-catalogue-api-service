{
  "$id": "/schemas/licences",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CADS licences vocabularies",
  "type": "object",
  "properties": {
    "licences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "revision": {
            "type": "number"
          },
          "contents_url": {
            "type": "string",
            "format": "uri"
          },
          "attachment_url": {
            "type": "string",
            "format": "uri"
          },
          "scope": {
            "type": "string",
            "enum": ["portal", "dataset"]
          },
          "portal": {
            "type": ["string", "null"]
          },
          "spdx_identifier": {
            "type": ["string", "null"]
          }
        },
        "required": ["id", "label", "revision", "contents_url", "attachment_url", "scope", "portal", "spdx_identifier"]
      }
    }
  },
  "required": ["licences"]
}
