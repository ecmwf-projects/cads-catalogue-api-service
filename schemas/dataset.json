{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/schemas/dataset",
  "title": "CADS dataset",
  "description": "Description of a CADS dataset",
  "type": "object",
  "allOf": [
    {
      "$ref": "/schemas/dataset_preview"
    }
  ],
  "properties": {
    "tmp:variables": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "/schemas/base_variables"
          }
        ],
        "properties": {
          "units": {
            "title": "Units",
            "description": "Units of measure",
            "type": "string"
          }
        },
        "required": ["units"]
      }
    },
    "tmp:description": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "/schemas/base_variables"
          }
        ]
      }
    }
  },
  "required": ["tmp:description"]
}
